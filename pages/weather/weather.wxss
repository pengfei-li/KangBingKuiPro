/* pages/weather/weather.wxss */
.page-content{
  padding-top: 0;
}
/*不同天气设置不同过的背景颜色*/
.default{
  background-color: #00CD66;
  border-color: #00CD66;
}
/*雨天*/

.rain {
  background-color: #758797;
  border-color: #758797;
}

/*晴天*/
.sunny {
  background-color: #3A87CD;
  border-color: #3A87CD;
}

/*多云*/
.cloudy {
  background-color: #708892;
  border-color: #708892;
}

/*雪天*/
.snow {
  background-color: #E0E0E0;
  border-color: #E0E0E0;
}
.ui-card {
  color: #fff;
  border-radius: 20rpx;
  box-shadow: 0 0 20rpx rgba(120, 120, 120, .5);
  padding: 20rpx;
}

/*控制显隐*/
.show {
  display: block;
}
.hide {
  display: none;
}
.map-icon {
  width: 20px;
  height: 20px;
  vertical-align: middle;
}
.realtime-temperature {
  font-size: 3em;
  text-align: center;
  height: 2em;
  width: 100%;
  display: block;
  overflow: hidden;
}
.realtime-date {
  font-size: 1.2em;
}
.today-info {
  height: 22px;
}
.weather {
  float: left;
  font-size: 14px;
  line-height: 22px;
  height: 22px;
}
.weather-icon-big{
  width: 5em;
  height: 5em;
}
.pm25 {
  border: 1px solid #fff;
  border-radius: 5px;
  width: auto;
  display: block;
  height: 30px;
  line-height: 30px;
  padding: 0 5px;
  float: right;
  margin-top: 15px;
}
.line{
  height: 30px;
  line-height: 30px;
  display: block;
  float: left;
  width: 100%;
}
/*未来三天*/
.weather-item {
  text-align: center;
  margin: .3em;
  padding: 1em 0;
  /*background-color: rgba(26,173,25,.7);*/
  background-color: #ffac45;
  color: #fff;
  border-radius: 20rpx;
  box-shadow: 0 0 20rpx rgba(120, 120, 120, .3);
}
.weather-icon {
  width: 30px;
  height: 30px;
  display: block;
  margin: .3em auto;
}
.page-content{
  padding: 1em;
}
/*各项指数*/
.index-item{
  margin:.6em .3em;
  border: 1rpx solid #eee;
  padding: .8em;
  background-color: #fff;
  border-radius: 20rpx;
  box-shadow: 0 0 20rpx rgba(120, 120, 120, .3);
}
.index-item-title{
  color: #252524;
  font-weight: bold;
}
.index-item-des{
  color:#6A6967;
}