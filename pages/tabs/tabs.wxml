<view class="ui-search">
	<view class="ui-sarch-panel" animation="{{searchPanelShow}}">
		<input class="search-input" type="text" confirm-type="search"/>
		<button class="search-btn" type="default">取消</button>
	</view>
	<view animation="{{searchOpen}}" class="ui-search-icon" bindtap="searchFocus">
		<image class="search-icon" mode="aspectFill" src="data:image/png;base64,"></image>
		<view class="search-text">搜索</view>
	</view>
</view>
