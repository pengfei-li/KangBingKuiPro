/* pages/schedule/schedule.wxss */
.sche-card {
	background-color: #fff;
	border: 1rpx solid #eee;
	color: #333;
	padding: 1.1em;
	margin:.6em .5em;
	border-radius: 20rpx;
	box-shadow: 0 0 20rpx rgba(120, 120, 120, .3);
	position: relative;
}
.sche-state{
	position: absolute;
	right: 30rpx;
	top: 30rpx;
	width: 40rpx;
	height: 40rpx;
	background-color: #42afff;
	border-radius: 20rpx;
}

.sche-state.success {
  background-color: #3ee4bf;
}

.sche-state.realtime {
  background-color: #ffac45;
}

.sche-state.outtime {
  background-color: #ff42b2;
}

.title{
	height: 80rpx;
	line-height: 80rpx;
	font-size: 36rpx;
	font-weight: bold;

/*	background-color: #ccc;*/
}
.time{
	width: 100%;
	height: 200rpx;
	overflow: hidden;
	/*background-color: gray;*/
}
.time .date{
	font-size: 30rpx;
	line-height: 30rpx;

}
.time .time-h-m{
	font-size: 80rpx;
	line-height: 170rpx;
	text-align: center;
	
}
.center{
	margin: 0 30rpx;
}
.desc{
	font-size: 28rpx;
	color: #666;
	word-break: break-word;
}
.add-btn{
	width: 120rpx;
	height: 120rpx;
	display: block;
	position: fixed;
	right: 40rpx;
	bottom: 40rpx;
	background-color: #fff;
	border-radius: 60rpx;
	border:1rpx solid #eee;
	box-shadow: 0 0 20rpx rgba(120, 120, 120, .3);
}
.add-icon{
	width: 100rpx;
	height: 100rpx;
	display: block;
	margin: 10rpx;
}