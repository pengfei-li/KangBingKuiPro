.map_container {
	height: 300px;
	width: 100%;
	position: absolute;
	bottom: 0;
	left: 0;
}
.map {
	height: 100%;
	width: 100%;
}
.result-swiper{
	width: 100%;
	height: 100%;
}
.no-content{
	height: 100%;
	width: 100%;
	font-size: 14px;
	color: #ccc;
	text-align: center;
	line-height: 100px;
}
.result-item{
	margin: 5%;
	height: 70%;
	width: 80%;
	padding: 5%;
	border:1rpx solid #eee;
	background-color: #fff;
	box-shadow: 0 0 20rpx rgba(120, 120, 120, .3);
	border-radius: 20rpx;
}
.result-item .name{
	line-height: 90rpx;
	font-size: 16px;
	font-weight: bold;
}
.result-item .address,
.result-item .tel{
	line-height: 80rpx;
	overflow: hidden;
}
.result-item .control-icon{
	width: 25px;
	height: 25px;
	vertical-align: middle;
	float: right;
	border: 1rpx solid #eee;
	box-shadow: 0 0 10rpx rgba(120, 120, 120, .3);
	border-radius: 50%;
	padding: 10rpx;
	margin: 10rpx;
}