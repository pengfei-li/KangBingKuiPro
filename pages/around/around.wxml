<view class="page">
	<view class="searchbar">
		<input placeholder="输入关键字:美食、酒店、KTV..." type="text" bindinput="bindKeyInput"/> 
	</view>
	<view class="map-container" >
		<map class="map" id="map" longitude="{{longitude}}" latitude="{{latitude}}" scale="15" show-location="true" markers="{{markers}}" bindmarkertap="makertap" bindcontroltap="controlTap"></map>
	</view>
	
	<view class="map-detail-info" style="{{mapStyle}}">
		<scroll-view scroll-x="true" style="height:80px;">
		    <view class="scroll-item" wx:for="{{sugData}}" wx:key="{{index}}" bindtap="">
		    	{{item.name}}
		    </view>
		</scroll-view>
	</view>
</view>
