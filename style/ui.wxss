/*flex float*/
.ui-flex {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
}
.ui-flex-item {
  -webkit-box-flex: 1;
  -webkit-flex: 1;
  flex: 1;
}
.ui-flex-item-2 {
  -webkit-box-flex: 2;
  -webkit-flex: 2;
  flex: 2;
}
.ui-flex-item-3 {
  -webkit-box-flex: 3;
  -webkit-flex: 3;
  flex: 3;
}

/*text-align*/
.text-center {
  text-align: center;
}

/*ui-panel*/
.ui-panel {
  width: 100%;
  height: auto;
  overflow: hidden;
}
.panel-title {
  height: 1.6em;
  line-height: 1.6em;
  font-size: 1em;
  color: #333;
  font-weight: 600;
}
.panel-content {
  padding: 0.3em 0;
}

/*ui-card*/
.ui-card {
  font-family: -apple-system-font, Arial, "Times New Roman", "Helvetica Neue", sans-serif;
  letter-spacing: 1px;
  background-color: #fff;
	border: 1rpx solid #eee;
	color: #333;
	padding: 1.1em;
	margin:.6em .4em;
	border-radius: 20rpx;
	box-shadow: 0 0 20rpx rgba(120, 120, 120, .3);
	position: relative;
}
.ui-card-in-page-content {
  margin: 0;
}
.ui-card-header {
  text-align: center;
  height: 3em;
  line-height: 3em;
}
.ui-card-content {
  padding: 0.5em;
}

/*ui-modal*/

/*ui-popup*/
.ui-modal, .ui-popup {
  position: fixed;
  display: block;
  width: 100%;
  height: 100%;
  top: 100%;
  left: 0;
  background-color: rgb(248, 248, 248);
}
.ui-modal-form {
  position: absolute;
  top: 20%;  /*background-color: #ccc;*/
  width: 100%;
}
.ui-modal-close {
  width: 30px;
  height: 30px;
  position: absolute;
  right: 2em;
  top: 2em;
}

/*ui-search*/
.ui-search {
  height: 45px;
  line-height: 45px;
  border-bottom: 1rpx solid #ccc;
  width: 100%;
  overflow: hidden;
}
.ui-sarch-panel {
  width: 100%;
  height: 45px;
  line-height: 45px;
  overflow: hidden;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
}
.ui-sarch-panel .search-input {
  text-indent: 10rpx;
  border: 1rpx solid #ccc;
  height: 60rpx;
  margin: 10rpx 0 10rpx .5em;
  text-align: left;
  line-height: 60rpx;
  border-radius: 5px;
  background-color: #fff;
  -webkit-box-flex: 8;
  -webkit-flex: 8;
  flex: 8;
  padding-left: 10rpx;
}
.ui-sarch-panel .search-btn {
  font-size: 14px;
  padding: 0 5px;
  margin: 10rpx .5em 10rpx 10rpx;
  height: 60rpx;
  text-align: center;
  line-height: 60rpx;
  -webkit-box-flex: 1;
  -webkit-flex: 1;
  flex: 1;
  border-color: #ccc;
  border:none !important;
}
.ui-sarch-panel .search-btn::after{
  border:none;
}
.ui-search-icon {
  border: 1rpx solid #ccc;
  height: 60rpx;
  margin: 10rpx .5em;
  text-align: center;
  line-height: 60rpx;
  border-radius: 5px;
  background-color: #fff;
}
.ui-search-icon .search-icon {
  width: 45rpx;
  height: 45rpx;
  vertical-align: middle;
}
.ui-search-icon .search-text {
  display: inline-block;
  vertical-align: middle;
  font-size: 14px;
  color: #8E8E8E;
  margin-left: 5rpx;
}
.ui-search-tip{
  width: 96%;
  height: auto;
  position: absolute;
  top: 92rpx;
  left: 0;
  border-bottom: 1rpx solid #ccc;
  background-color: #fff;
  padding:2%;
  z-index: 100;
}
.ui-search-tip .title{
  display: block;
  padding: 10px 5px 5px 10px;
  font-size: 12px;
  text-align: center;
}
.ui-search-tip .con{
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  padding: .3em 0;
  padding-bottom: .5em;
}
.ui-search-tip .item{
  flex: 0 0 43%;
  font-size: 14px;
  text-align: center;
  border: 1rpx solid #eee;
  margin: 1%;
  padding: 1% 2%;
  border-radius: 5px;
}
/*ui-btn*/
.ui-add-btn{
  width: 120rpx;
  height: 120rpx;
  display: block;
  position: fixed;
  right: 40rpx;
  bottom: 40rpx;
  background-color: #fff;
  border-radius: 60rpx;
  border:1rpx solid #eee;
  box-shadow: 0 0 20rpx rgba(120, 120, 120, .3);
}
.ui-add-icon{
  width: 80rpx;
  height: 80rpx;
  display: block;
  margin: 20rpx;
}
/*ui-input-item*/
.ui-input-list{
  padding: .5em;
}
.ui-input-line{
  height: auto;
  line-height: 80rpx;
  border: 1rpx solid #eee;
  background-color: #fff;
  border-radius: 10rpx;
  margin: .6em 0;
  padding: 10rpx;
  box-shadow: 0 0 20rpx rgba(120, 120, 120, .2);
  overflow: hidden;
}
.ui-input-line .label {
  width: 30%;
  height: 80rpx;
  float: left;
  text-align: center;
}
.ui-input-line .input-value {
  width: 70%;
  height: 80rpx;
  line-height: 80rpx;
}
.ui-input-line textarea {
  width: 90%;
  padding: 5%;
  float: left;
}
/*other*/
button {
  margin: 0.3em;
}
.hide {
  display: none;
}
.show {
  display: block;
}